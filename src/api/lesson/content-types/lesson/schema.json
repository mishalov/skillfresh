{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "duration": {
      "type": "integer",
      "min": 15,
      "default": 60
    },
    "innerInfo": {
      "type": "richtext",
      "private": true
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course",
      "inversedBy": "lessons"
    },
    "scheduled": {
      "type": "datetime"
    },
    "feedbacks": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::feedback.feedback",
      "mappedBy": "lessons"
    },
    "notionLink": {
      "type": "string"
    },
    "revealed": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "templateLesson": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::template-lesson.template-lesson",
      "inversedBy": "lessons"
    },
    "description": {
      "type": "text"
    },
    "chapter": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::chapter.chapter"
